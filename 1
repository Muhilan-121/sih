<script>
function showToiletLocations() {
    const pinCodeInput = document.getElementById('pinCodeInput');
    const pinCode = pinCodeInput.value;
    
    if(!pinCode.match(/^\d{6}$/)) {
        document.getElementById('message').textContent = "Please enter a valid 6-digit pin code.";
        return;
    }

    const toiletLocations = {
        "636401": ["Toilet 1: Central Park", "Toilet 2: Metro Station"],
        "636402": ["Toilet 1: Community Center", "Toilet 2: Shopping Mall"],
        "636403": ["Toilet 1: Museum", "Toilet 2: University"],
        "636404": ["Toilet 1: Bus stand", "Toilet 2: Gate 6"],
        "636405": ["Toilet 1: KEC", "Toilet 2: Every hostel"],
        "636406": ["Toilet 1: Museum", "Toilet 2: University"],
        "636407": ["Toilet 1: Hospital", "Toilet 2: every floor"],
    };

    let message;
    if(toiletLocations[pinCode]) {
        message = "Toilet locations in your area:\n" + toiletLocations[pinCode].join("\n");
    } else {
        message = "No toilet locations available for this pin code.";
    }

    document.getElementById('message').textContent = message;
}
</script>
